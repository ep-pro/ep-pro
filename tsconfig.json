{
  "extends": "@ntnyq/tsconfig/strict.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ES2023"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "module": "ESNext",
    "baseUrl": ".",
    "types": ["node"],
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./docs/**/*.ts",
    "./docs/**/*.vue",
    "./docs/.vitepress/**/*.ts",
    "./docs/.vitepress/**/*.vue",
    "./packages/**/*.ts",
    "./packages/**/*.tsx",
    "./scripts/**/*.ts",
    "./tests/**/*.ts",
    "./*.config.ts"
  ],
  "exclude": ["**/dist/**"]
}
