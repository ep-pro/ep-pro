{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ES2022"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./docs", "./packages", "./playground", "./scripts", "./tests", "./*.config.ts"],
  "exclude": ["**/dist/**"]
}
