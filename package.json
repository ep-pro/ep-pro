{
  "name": "@ep-pro/ep-pro",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "repository": "ep-pro/ep-pro",
  "scripts": {
    "build": "pnpm run --filter=\"./packages/*\" --parallel build",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "lint": "eslint",
    "prepare": "husky",
    "release": "run-s build release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:version": "bumpp -r",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.6.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^24.5.2",
    "bumpp": "^10.2.3",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2",
    "unocss": "^66.5.2",
    "unplugin-vue-jsx": "^0.8.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "nano-staged": {
    "*.{js,ts,cjs,mjs,tsx,vue,md,yml,yaml,toml,json}": "eslint --fix",
    "*.{html,css,scss}": "prettier -uw"
  }
}
