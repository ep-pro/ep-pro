{
  "name": "@ep-pro/ep-pro",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "repository": "ep-pro/ep-pro",
  "scripts": {
    "build": "pnpm run --filter=\"./packages/*\" --parallel build",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "eslint",
    "prepare": "husky",
    "release": "run-s build release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:version": "bumpp -r",
    "test": "vitest",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^6.0.0-beta.6",
    "@ntnyq/tsconfig": "^3.1.0",
    "@types/node": "^25.2.0",
    "@typescript/native-preview": "^7.0.0-dev.20260203.1",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.28.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "unocss": "^66.6.0",
    "unplugin-vue-jsx": "^0.8.1",
    "vite": "^8.0.0-beta.12",
    "vitest": "^4.0.18"
  },
  "nano-staged": {
    "*.{js,ts,mjs,tsx,vue,md,yml,yaml,toml,json}": "eslint --fix",
    "*": "oxfmt --no-error-on-unmatched-pattern"
  }
}
