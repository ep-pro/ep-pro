    "docs:dev": "pnpm -C docs run dev",
    "lint": "eslint .",
    "prepare": "husky",
    "publish": "pnpm build && changeset publish",
    "test": "vitest"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.9",
    "@ntnyq/eslint-config": "^3.0.2",
    "@ntnyq/prettier-config": "^1.21.3",
    "@types/node": "^22.7.5",
    "@vitest/coverage-v8": "^2.1.3",
    "eslint": "^9.12.0",
    "execa": "^9.4.0",
    "husky": "^9.1.6",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.2.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "unbuild": "^3.0.0-rc.11",
    "unocss": "^0.63.4",
    "unplugin-vue-jsx": "^0.4.0",
    "vite": "^5.4.9",
    "vitest": "^2.1.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.24.0"
    }
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,cjs,mjs,vue,md,json,yml,yaml}": "eslint --fix"
  }
